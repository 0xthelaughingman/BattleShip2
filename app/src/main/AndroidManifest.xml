<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cruiserproductions.battleship2">

    <application
        android:allowBackup="true"
        android:icon="@drawable/gameicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PreLoader"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Loader"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gridTest"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BattleScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameOptions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserBefore"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MatchOverview"
            android:screenOrientation="portrait" />

        <service android:name=".MyService" />

        <activity
            android:name=".UserStats"
            android:screenOrientation="portrait" />
        <activity android:name=".HowToPlay" />
        <activity android:name=".About"></activity>
    </application>

</manifest>